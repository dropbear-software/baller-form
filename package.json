{
  "name": "baller-form",
  "description": "Signup form implemented as a self-contained Web Component",
  "private": "true",
  "author": "baller-form",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./baller-form.js": "./dist/src/baller-form.js",
    "./baller-form-bundle.js": "./demo/baller-form.js",
    "./baller-form-bundle.js.map": "./demo/baller-form.js.map"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "tsc && npm run analyze -- --exclude dist",
    "prepublish": "tsc && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "bundle": "esbuild dist/src/index.js --bundle --minify --sourcemap --outfile=demo/baller-form-bundle.js && esbuild --bundle styles/theme.css --outfile=demo/theme.css",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "@lit/task": "^1.0.0",
    "@material/web": "^1.0.0",
    "element-internals-polyfill": "^1.3.9",
    "lit": "^2.7.4"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/eslint-config": "^12.0.0",
    "@open-wc/testing": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@web/dev-server": "^0.3.4",
    "@web/test-runner": "^0.17.0",
    "@web/test-runner-playwright": "^0.10.1",
    "concurrently": "^5.3.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.3.0",
    "firebase-tools": "^12.7.0",
    "prettier": "^2.4.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.0"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
